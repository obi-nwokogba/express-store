<%- include('partials/header.ejs') %>

<title> Sunglasses Express - The Best Sunglasses Online - Express Delivery </title>
</head>

<body>
    <%- include('partials/navigationbar.ejs') %>

    <h2>Welcome to the Home Page of Sunglasses Express</h2>
    <div>
        <% sunglasses.forEach(sunglass => { %>
        <div class="productcontainer">

            <div class="productimagecontainer">
                <img src="<%=sunglass.imgurl; %>" class="productdisplay" />
            </div>

            <span class="model">
                <a href="/sunglasses/<%=sunglass._id; %>">

                    <%=sunglass.model; %></a> </span>

            <%=sunglass.description; %>

            <span class="price"> $<%=sunglass.price; %>

                <br />

                <a href="" class="button2">BUY</a>

                <a href="/sunglasses/<%=sunglass._id%>/edit" class="editbutton">
                    edit
                </a>

                <form action="/sunglasses/<%= sunglass.id %>?_method=DELETE" method="POST" class="deleteform">
                    <input type="submit" value="delete" class="deletebutton" />
                    <small>Only <%=sunglass.quantity; %> left</small>
                </form>


        </div>

        <% }) %>
    </div>



    <%- include('partials/footer.ejs') %>
</body>

</html>